<form action="/auth/register" method="POST">
    <h1>Register</h1>
    <% include ./../partials/messages %>
    <fieldset class="uk-fieldset">

        <div class="uk-margin">
            <input class="uk-input" type="email" placeholder="email" name="email">
        </div>

        <div class="uk-margin">
            <input class="uk-input" type="password" placeholder="password" name="password">
        </div>

        <div class="uk-margin">
            <input class="uk-input" type="password" placeholder="confirm password" name="passwordConfirm">
        </div>

        <div class="uk-margin">
            <button class="uk-button uk-button-default">Register</button>
        </div>
    </fieldset>
</form>
